{
  "name": "micro-front-end",
  "version": "0.0.0",
  "description": "Micro front end architectute",
  "repository": "https://github.com/module-federation/module-federation-examples.git",
  "author": "Michail Tsougkranis <michail.tsougkranis@gmail.com> (https://github.com/MikeNats)",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "5.3.0",
    "cross-spawn": "7.0.3",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "lerna": "3.22.1",
    "prettier": "2.1.2",
    "pretty-quick": "3.1.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --ignore-scripts",
    "build": "lerna run --parallel build",
    "submodules": "git pull --recurse-submodules",
    "prettier": "prettier --write \"**/*.{js,json,md,ts,tsx}\"",
    "prettier:check": "prettier --list-different \"**/*.{js,json,md,ts,tsx}\"",
    "test": "jest test/index.spec.js --maxWorkers=2"
  }
}
